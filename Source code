    public void atama2() throws SQLException{
      java.sql.Connection baglanti=
        java.sql.DriverManager.getConnection("jdbc:derby://localhost:1527/sefika;user=sefika;password=sefika;");
      java.sql.Statement sorgulama=baglanti.createStatement();
      java.sql.ResultSet SonucVerileri=sorgulama.executeQuery("SELECT *FROM DERS");
      while(SonucVerileri.next())
      {
     jComboBox3.addItem(SonucVerileri.getString("Kredi"));
      
      }
      
    }
    public  void atama()
    {
      
      String []dizi1={"Fizik 1","Matematik 1","Türk Dili ve Edebiyatı 1","İnkilap Tarihi 1","Bilgisayar Mühendisliğine Giriş",
    "Teknik İngilizce","Algoritmave Programlama 1"};
       
      for(int i=0;i<dizi1.length;i++) {
            jComboBox3.addItem(dizi1[i]);
        }
       
      
    }
