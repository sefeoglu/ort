    private void button1MouseClicked(java.awt.event.MouseEvent evt) {                                     
  
        
        if(toplam==0) {
            ktoplam=1;
        }
        jTextField1.setText(""+toplam/ktoplam);
         toplam=0;
         ktoplam=0;
         secim="";
        // TODO add your handling code here:
    }                                    

