    private void jButton2MouseClicked(java.awt.event.MouseEvent evt) {                                      
       jTextField1.setText(" ");
        kredi+=(int)jComboBox4.getSelectedIndex();
       ktoplam+=kredi;
    
        // TODO add your handling code here:
        not =  (float)(4-((float)jComboBox1.getSelectedIndex()/2));
    toplam+=not*kredi;
    kredi=2;
    secim+=(String)jComboBox3.getSelectedItem()+"__"+jComboBox4.getSelectedItem()+"__"+jComboBox1.getSelectedItem()+" \n";
    jTextArea1.setText(secim);
    }                                     

